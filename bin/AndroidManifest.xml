      package="com.tvs.activity"
      android:versionCode="3"
      android:versionName="1.3.1.7">
<uses-sdk android:minSdkVersion="4" />
    <application android:icon="@drawable/launch_icon" android:label="@string/app_name" android:name=".TVSEService">
     <activity android:name=".LoginActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       
     <activity android:windowSoftInputMode="adjustPan" android:name=".CallCompletedActivity" />
